[Unit]
Description=The PHP 7.2 FastCGI Process Manager
After=network.target

[Service]
Type=notify
PIDFile=/var/run/php7.2-fpm-{{domain}}.pid
ExecStartPre=/usr/lib/php/php7.2-fpm-checkconf
ExecStart=/usr/sbin/php-fpm7.2 --nodaemonize --fpm-config /etc/php/7.2/fpm/pool.d/{{domain}}.conf
ExecReload=/usr/lib/php/php7.2-fpm-checkconf
ExecReload=/bin/kill -USR2 $MAINPID

[Install]
WantedBy={{wantedby}}